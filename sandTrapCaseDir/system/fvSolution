FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        tolerance       1e-05;
        relTol          0.01;
        smoother        GaussSeidel;
    }

    U
    {
	solver		PBiCGStab;
	preconditioner	DILU;
	tolerance	1e-5;
	relTol		0.01;	
    }

    UFinal
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-6;
        relTol          0;

    }	    

    pFinal
    {
        solver          GAMG;
        tolerance       1e-6;
        relTol          0;
        smoother        GaussSeidel;
    }

    omega
    {
        solver          PBiCGStab;
	preconditioner	DILU
        tolerance       1e-05;
        relTol          0.0;
    }
   

    k
    {
	solver	        PBiCGStab;
        preconditioner	DILU;
	tolerance	1e-05;
	relTol		0.0;	
    }

    kFinal	    
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-06;
        relTol          0.0;
    }

    omegaFinal
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-06;
        relTol          0.0;
    }

}
PIMPLE
{
    nOuterCorrectors 2;
    nCorrectors     4;
    momentumPredictor yes;
    nNonOrthogonalCorrectors 0;
    pRefCell        0;
    pRefValue       0;
    residualControl
    {
	"(p|U|k|omega)"
	{
		tolerance	1e-5;
		relTol		0;
	}
    }
}

SIMPLE
{
	nNonOrthoganalCorrectors	0;
	residualControl
	{
		p	1e-5;
		U	1e-5;
		"(k|epsilon|omega|R)"	1e-5;
	}

}


